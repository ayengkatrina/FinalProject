@model PasteBookEFLibrary.COMMENTS_TABLE

@using (Html.BeginForm("MakeCommentOnPost", "PasteBook"))
{

    <div class="col-md-10">
        <div class="input-group">
            @Html.EditorFor(x => x.CONTENT, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Write a comment..." } })
            <span class="input-group-btn">
                <button id="btnCommentProfile" class="btn btn-default" type="submit">Comment</button>
            </span>
        </div>
    </div>
}


